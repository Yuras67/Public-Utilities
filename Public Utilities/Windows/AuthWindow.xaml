<Window x:Class="Public_Utilities.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Public_Utilities"
        mc:Ignorable="d"
        Title="Учет оплаты коммунальных услуг" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        MouseDown="Mouse_Down">

    <Window.Resources>
        <ControlTemplate 
            x:Key="NoMouseOverButtonTemplate"   
            TargetType="Button">
            <Border 
                Background="{TemplateBinding Background}"  
                BorderBrush="{TemplateBinding BorderBrush}"  
                BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter 
                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  
                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger 
                    Property="IsEnabled"  
                    Value="False">
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Label Content="Учёт"
                       HorizontalAlignment="Center"
                       FontSize="25"
                       FontWeight="Bold"/>
                <Label Content="Оплаты"
                       HorizontalAlignment="Center"
                       FontSize="25"
                       FontWeight="Bold"/>
                <Label Content="Коммунальных"
                       HorizontalAlignment="Center"
                       FontSize="25"
                       FontWeight="Bold"/>
                <Label Content="Услуг"
                       HorizontalAlignment="Center"
                       FontSize="25"
                       FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="118"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="47"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Content="Авторизация"
                   FontSize="30"
                   FontWeight="Bold" Height="50" Width="204"/>

            <Label Grid.Column="1"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Content="Логин"
                   FontSize="20"
                   FontWeight="Bold" Height="36" Width="70"/>

            <TextBox 
                x:Name="Log"
                Grid.Column="1"
                Grid.Row="2"
                FontSize="20"
                VerticalContentAlignment="Center"
                MaxLength="15"/>

            <Label Grid.Column="1"
                   Grid.Row="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Content="Пароль"
                   FontSize="20"
                   FontWeight="Bold" Height="36" Width="84"/>

            <PasswordBox 
                x:Name="Pass"
                Grid.Column="1"
                Grid.Row="4"
                FontSize="20"
                VerticalContentAlignment="Center"
                MaxLength="15"/>

            <Button Grid.Column="1"
                    Grid.Row="6"
                    Width="150"
                    HorizontalAlignment="Left"
                    Content="Далее"
                    FontSize="15"
                    Background="Blue"
                    Click="Click_Next"/>

            <StackPanel 
                Visibility="Collapsed"
                Name="CaptchaPanel" 
                Grid.Row="5" 
                Grid.Column="1" Grid.RowSpan="1">
                <TextBlock 
                    x:Name="CaptchaTextBlock" 
                    FontSize="35" 
                    FontWeight="Bold"
                    Width="150" 
                    Height="50" 
                    FontFamily="Calibri" 
                    TextAlignment="Center" 
                    Foreground="#FF828282" 
                    Margin="0, 30, 0, 0"/>
                <TextBox 
                    x:Name="CaptchaTextBox" 
                    Width="100" 
                    Height="30"
                    FontSize="20"
                    />
                <Button
                    x:Name="Update_Captcha" 
                    Height="26" 
                    Width="34" 
                    BorderBrush="#00000000" 
                    Margin="185,-90,0,20" 
                    Click="Update_Captcha_Click" 
                    Foreground="#00000000" 
                    Template="{StaticResource NoMouseOverButtonTemplate}" 
                    Background="{x:Null}">
                    <Image x:Name="Update_Captcha_gif" 
                        Source="/Resources/loader.gif" 
                        Stretch="Fill"/>
                </Button>
            </StackPanel>

            <Button Grid.Column="1"
                    Grid.Row="6"
                    Width="150"
                    HorizontalAlignment="Left"
                    Content="Выйти"
                    FontSize="15"
                    Background="Red"
                    Click="Click_Exit" Margin="200,0,0,0"/>
        </Grid>

    </Grid>
</Window>

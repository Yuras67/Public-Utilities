<Window x:Class="Public_Utilities.Edit_Folder.Edit_User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Public_Utilities.Edit_Folder"
        mc:Ignorable="d"
        Title="Редактировать пользователя" 
        Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="168*"/>
            <ColumnDefinition Width="158*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Content="Редактировать пользователя" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" FontSize="25" Height="50" Width="344"/>
        <Label Grid.Column="1" Content="Логин" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" FontSize="20" Height="40" Width="196"/>
        <Label Grid.Column="1" Content="Пароль" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" FontSize="20" Height="40" Width="196"/>
        <Label Grid.Column="1" Content="Роль" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" FontSize="20" Height="40" Width="196"/>
        <TextBox Text="{Binding Login}" MaxLength="100" Grid.Row="2" Grid.Column="2" Margin="0,15,10,10"/>
        <TextBox Text="{Binding Password}" MaxLength="100" Grid.Row="3" Grid.Column="2" Margin="0,15,10,10"/>
        <TextBox Text="{Binding Role}" MaxLength="100" Grid.Row="4" Grid.Column="2" Margin="0,15, 10,10"/>
        <Button Grid.Column="2" Content="Сохранить" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" FontSize="18" Height="50" Width="200" ButtonBase.Click="Button_Click" Background="#FFB2B2B2"/>
    </Grid>
</Window>


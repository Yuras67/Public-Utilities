<Window x:Class="Public_Utilities.Edit_Folder.Edit_Service"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Public_Utilities.Edit_Folder"
        mc:Ignorable="d"
        Title="Редактировать услугу"
        Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="45*"/>

            <RowDefinition Height="45*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="322*"/>
            <ColumnDefinition Width="277*"/>
            <ColumnDefinition Width="136*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Content="Редактировать услугу" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" FontSize="30" Height="60" Width="310"/>
        <Label Grid.Column="1" Content="Название услуги" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" FontSize="25" Height="45" Width="200"/>
        <TextBox Text="{Binding Service_Name}" MaxLength="100" Grid.Row="2" Grid.Column="2" Margin="0,15,15,15"/>
        <Button Grid.Column="2" Content="Сохранить" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" FontSize="20" Height="50" Width="200" ButtonBase.Click="Button_Click" Background="#FFB2B2B2"/>
    </Grid>
</Window>



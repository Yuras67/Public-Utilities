<Page x:Class="Public_Utilities.AdminPages.ContractsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Public_Utilities.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="800" 
      d:DesignWidth="700"
      Title="ContractsPage"
      IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="159"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               Content="Договоры"
               FontSize="25" Height="43" Width="276" Margin="212,0,0,0"/>

        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    Height="50"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left" Width="584" Margin="58,106,0,0" Grid.Row="0">
            <Button Content="Выставить счёт"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Сменить статус платежа"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Удалить платеж"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Отчет о платежах"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Квитанция об оплате"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
        </StackPanel>

        <DataGrid Grid.Column="0" AutoGenerateColumns="False" x:Name="ContractsGrid" Grid.Row="1"
                  IsReadOnly="True"
                  Background="Transparent" 
                  BorderThickness="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID договора" Binding="{Binding Contract_ID}" Width="85"></DataGridTextColumn>
                <DataGridTextColumn Header="ID услуги" Width="65" Binding="{Binding Service_ID}"></DataGridTextColumn>
                <DataGridTextColumn Header="ID потребителя" Width="100" Binding="{Binding Сonsumers_ID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Организация" Width="*" Binding="{Binding Organization}"></DataGridTextColumn>
                <DataGridTextColumn Header="Описание" Width="*" Binding="{Binding Description}"></DataGridTextColumn>
                <DataGridTextColumn Header="Стоимость" Width="*" Binding="{Binding Price}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

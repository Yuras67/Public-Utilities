<Page x:Class="Public_Utilities.AdminPages.ReceiptsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Public_Utilities.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="800" 
      d:DesignWidth="700"
      Title="ReceiptsPage"
      IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="159"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               Content="Квитанции"
               FontSize="25" Height="43" Width="276" Margin="212,0,0,0"/>

        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    Height="50"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left" Width="584" Margin="58,106,0,0" Grid.Row="0">
            <Button Content="Выставить счёт"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Сменить статус платежа"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Удалить платеж"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Отчет о платежах"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Квитанция об оплате"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
        </StackPanel>

        <DataGrid Grid.Column="0" AutoGenerateColumns="False" x:Name="ReceiptsGrid" Grid.Row="1"
                  IsReadOnly="True"
                  Background="Transparent" BorderThickness="0">
            <DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="Оплачено">
                            <Setter Property="Background" Value="LightGreen"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Просрочено">
                            <Setter Property="Background" Value="Red"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Не оплачено">
                            <Setter Property="Background" Value="Orange"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.ItemContainerStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID квитанции" Binding="{Binding Receipt_ID}" Width="30"></DataGridTextColumn>
                <DataGridTextColumn Header="ID потребителя" Width="*" Binding="{Binding Сonsumers_ID}"></DataGridTextColumn>
                <DataGridTextColumn Header="ID договора" Width="*" Binding="{Binding Contract_ID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Статус" Width="*" Binding="{Binding Status}"></DataGridTextColumn>
                <DataGridTextColumn Header="Сумма оплаты" Width="*" Binding="{Binding PaymentAmount}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата" Width="*" Binding="{Binding Date}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

<Page x:Class="Public_Utilities.AdminPages.СonsumersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Public_Utilities.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="800" 
      d:DesignWidth="700"
      Title="СonsumersPage"
      IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="159"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               Content="Потребители"
               FontSize="25" Height="43" Width="276" Margin="212,0,0,0"/>

        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    Height="50"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left" Width="584" Margin="58,106,0,0" Grid.Row="0">
            <Button Content="Выставить счёт"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Сменить статус платежа"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Удалить платеж"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Отчет о платежах"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
            <Button Content="Квитанция об оплате"
                    Height="35"
                    Margin="5,0,5,0"
                    Background="Gray"
                    Foreground="White"/>
        </StackPanel>

        <DataGrid Grid.Column="0" AutoGenerateColumns="False" x:Name="ConsumersGrid" Grid.Row="1"
                  IsReadOnly="True"
                  Background="Transparent" BorderThickness="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID потребителя" Binding="{Binding Сonsumers_ID}" Width="30"></DataGridTextColumn>
                <DataGridTextColumn Header="ФИО" Width="*" Binding="{Binding FullName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Номер телефона" Width="*" Binding="{Binding Phone}"></DataGridTextColumn>
                <DataGridTextColumn Header="Почта" Width="*" Binding="{Binding Email}"></DataGridTextColumn>
                <DataGridTextColumn Header="ID льзователя" Width="*" Binding="{Binding User_ID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Адрес" Width="*" Binding="{Binding Address}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата рождения" Width="*" Binding="{Binding Date_Of_Birth}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

